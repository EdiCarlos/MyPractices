<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
  <system.serviceModel>
    <services>
      <service name="MesssageSecurityService.CalculatorService" behaviorConfiguration="calulatorBehavior">
        <endpoint address=""
                  contract="MesssageSecurityService.ICalculatorService"
                  binding="basicHttpBinding"
                  bindingConfiguration="basicBinding">
        </endpoint>
        <endpoint address="mex"
                  contract="IMetadataExchange"
                  binding="mexHttpBinding"></endpoint>
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8000/CalculatorService"/>
          </baseAddresses>
        </host>
      </service>
    </services>
    <bindings>
      <basicHttpBinding>
        <binding name="basicBinding">
          <security mode="Message">
            <message clientCredentialType="Certificate"/>
          </security>
        </binding>
      </basicHttpBinding>
    </bindings>
    
    <behaviors>
      <serviceBehaviors>
        <behavior name="calulatorBehavior">
          <serviceMetadata httpGetEnabled="true"/>
          <serviceDebug includeExceptionDetailInFaults="true"/>
          <serviceCredentials>
            <serviceCertificate findValue="CN=WCFService"
                                storeName="My"
                                storeLocation="LocalMachine"
                                x509FindType="FindBySubjectDistinguishedName">
            </serviceCertificate>
            <clientCertificate>
              <authentication certificateValidationMode="PeerOrChainTrust"/>
            </clientCertificate>
          </serviceCredentials>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>