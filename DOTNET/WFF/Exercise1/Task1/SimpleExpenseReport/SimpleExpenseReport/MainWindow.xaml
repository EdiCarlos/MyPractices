<Window x:Class="SimpleExpenseReport.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="252" Width="311">
    <StackPanel Height="Auto" Name="stackPanel1" Width="Auto"  >
        <Label Content="Amount" Height="28" Name="label1" Margin="50, 0, 0, 0" HorizontalAlignment="Stretch" />
        <TextBox Height="23" Name="textBox1" Width="150" />
        <Button Content="Submit" Name="btnSubmit" Width="50" Click="btnSubmit_Click" />
        <Grid Height="98" Name="grid1" Width="199">
                <Rectangle Stroke="Black" StrokeDashArray="3 1" Height="Auto" StrokeThickness="2" SnapsToDevicePixels="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" />
            <StackPanel>
                <Label Content="Approval" Height="28" Name="lblApproval" Margin="0, 20, 0, 0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Name="btnApproval" Content="_Approval" IsEnabled="False" Click="btnApproval_Click" />
                    <Button Name="btnReject" Content="_Reject" Margin="3, 0, 0, 0" IsEnabled="False" Click="btnReject_Click" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </StackPanel>
</Window>
