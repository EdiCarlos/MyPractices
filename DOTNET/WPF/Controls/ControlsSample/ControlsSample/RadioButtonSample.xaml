<Window x:Class="ControlsSample.RadioButtonSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RadioButtonSample" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <GroupBox>
                <GroupBox.Header>
                    <Button>Options</Button>
                </GroupBox.Header>
                <StackPanel>
                    <RadioButton>Option 1</RadioButton>
                    <RadioButton>Option 2</RadioButton>
                </StackPanel>
            </GroupBox>
            
            <GroupBox Header="Pets"> 
            <StackPanel>
                <RadioButton GroupName="Animal">Lion</RadioButton>
                <RadioButton GroupName="Animal">Elephant</RadioButton>
                <RadioButton GroupName="Animal">Cat</RadioButton>
                <RadioButton GroupName="Insects">Bee</RadioButton>
                <RadioButton GroupName="Insects">Mosqito</RadioButton>
            </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
    
</Window>
