<Window x:Class="LayoutSample.FlowDirection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FlowDirection" Height="300" Width="300">
    <StackPanel VerticalAlignment="Center">
        <Button Height="40" Width="150" Background="Red"  FlowDirection="LeftToRight" VerticalContentAlignment="Top" HorizontalContentAlignment="Left">Left To Right</Button>
        <Button Height="40" Width="150" Background="Orange"  FlowDirection="RightToLeft" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Left">Right To Left</Button>
    </StackPanel>
</Window>
