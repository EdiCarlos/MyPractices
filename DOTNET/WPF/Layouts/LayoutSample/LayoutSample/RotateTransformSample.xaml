<Window x:Class="LayoutSample.RotateTransformSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RotateTransformSample" Height="300" Width="300">
    <Grid>
        <Button FlowDirection="RightToLeft" Height="50" Width="100">
            <Button.LayoutTransform>
                <RotateTransform Angle="90" />
            </Button.LayoutTransform>
            <TextBlock>
                <TextBlock.RenderTransform>
                    <RotateTransform Angle="90" CenterY="9" CenterX="10"/>
                </TextBlock.RenderTransform>
                    Ok
            </TextBlock>
        </Button>
    </Grid>
</Window>
