<Window x:Class="DataProviderSample.validationRulesExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="validationRulesExample" Height="300" Width="300" xmlns:local="clr-namespace:DataProviderSample" >
    <Grid>
        <TextBox Width="200" Height="30">
            <TextBox.Text>
                <Binding>
                    <Binding.ValidationRules>
                        <local:RangeValidation />
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>
    </Grid>
</Window>
