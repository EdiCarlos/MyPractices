#ifndef CALCULATOR_H_
#define CALCULATOR_H_

class Calculator
{
private:
	double num1, num2;
	double result;
public:
	double Addition(double n1);
	double Addition(double n1, double n2);
	double Addition(double n1, double n2, double n3);
	double Addition(double n1, int n2);
	double Addition(int n1);
	void Addition(int n1);
	double Addition(int n2, int n1);
	double Subtraction(double n1, double n2);
	double *& ShowResult();
};

class Person
{
	private:
		char* firstName;
		char* lastName;
		int age;
	public:
       int GetAge();
       char* FirstName();
       char* LastName();
};
class Employee : Person
{
private:
	double baseSalary;
public:
	void ShowNameAndSalary();
};

#endif /* CALCULATOR_H_ */
