#ifndef PERSON_H_
#define PERSON_H_

class Person
{
	private:
		char* firstName;
		char* lastName;
		int age;
	public:
       int GetAge();
       char* FirstName();
       char* LastName();
};

class Employee : Person
{
private:
	double baseSalary;
public:
	void ShowNameAndSalary();
};



#endif /* PERSON_H_ */
