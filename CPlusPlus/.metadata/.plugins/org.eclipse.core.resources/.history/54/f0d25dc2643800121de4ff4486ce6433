#include <iostream>
#include "Headers/Person.h";

using namespace std;
Person::Person(char* firstName, char * lastName, int age)
{
	this.firstName = firstName;
	this.lastName = lastName;
	this.age = age;
}

char* Person::FirstName()
{
	return firstName;
}

char* Person::LastName(){
	return lastName;
}

int Person::GetAge(){
	return age;
}

Employee::Employee(double salary){
	baseSalary = salary;
}
void Employee::ShowNameAndSalary()
{
	cout<<"Employee Name: ";
	cout<<FirstName() + " " + LastName()<<endl;

}
